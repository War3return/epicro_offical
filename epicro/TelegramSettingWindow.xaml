<Window x:Class="epicro.TelegramSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="텔레그램 연동" Height="220" Width="340"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="내 Chat ID:" Grid.Row="0" Padding="0,0,0,2" FontWeight="SemiBold"/>
        <TextBox x:Name="txt_ChatId" Grid.Row="1" Height="24" Margin="0,0,0,4"
                 ToolTip="여러 명은 쉼표(,)로 구분 예: 123456789,987654321"/>

        <TextBlock Grid.Row="2" Margin="0,0,0,2" Foreground="Gray" FontSize="10" TextWrapping="Wrap">
            Chat ID 확인: 텔레그램에서 <Run FontWeight="Bold">@userinfobot</Run> 에게 아무 메시지나 보내세요.
        </TextBlock>

        <Label Content="※ 여러 명은 쉼표(,)로 구분" Grid.Row="3"
               Foreground="Gray" FontSize="10" Padding="0,0,0,0"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="btnTest" Content="테스트 전송" Width="80" Margin="0,0,5,0" Click="btnTest_Click"/>
            <Button x:Name="btnSave" Content="저장" Width="55" Margin="0,0,5,0" Click="btnSave_Click"/>
            <Button Content="닫기" Width="55" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
