<Window x:Class="epicro.TelegramSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="텔레그램 설정" Height="185" Width="340"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="봇 토큰:" Grid.Row="0" Padding="0,0,0,2"/>
        <TextBox x:Name="txt_BotToken" Grid.Row="1" Height="24" Margin="0,0,0,8"/>

        <Label x:Name="lbl_UserCount" Content="등록된 사용자: 0명" Grid.Row="2" Padding="0,0,0,4"/>

        <Label Content="※ 토큰 변경 시 앱 재시작 필요" Grid.Row="3"
               Foreground="Gray" FontSize="10" Padding="0,0,0,8"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnTest" Content="테스트 전송" Width="80" Margin="0,0,5,0" Click="btnTest_Click"/>
            <Button x:Name="btnSave" Content="저장" Width="55" Margin="0,0,5,0" Click="btnSave_Click"/>
            <Button Content="닫기" Width="55" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
